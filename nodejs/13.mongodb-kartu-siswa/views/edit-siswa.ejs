<div class="container mt-3">
<div class="row">
<div class="col-md-6">
<h2>Form Ubah Data Siswa</h2>
<% if(typeof errors != "undefined" ) { %>
<div class="alert alert-danger" role="alert"> 
<ul>
<% errors.forEach(error => { %>
  <li><%= error.msg %></li>
<%  }) %>
</ul>
</div>
<% } %>
<form method="post" action="/contact/update">
  <input type="hidden" name="oldName" value="<%= dataSama.oldName || dataSama.nama %>">
  <div class="mb-3">
    <label for="id" class="form-label">Id Siswa</label>
    <input type="text" class="form-control" id="id" name="id" value="<%= dataSama.id %>" required>
  </div>
 <div class="mb-3">
    <label for="nama" class="form-label">Nama Siswa</label>
    <input type="text" class="form-control" id="nama" name="nama" value="<%= dataSama.nama %>" required>
 <div class="mb-3">
    <label for="kelas" class="form-label">Kelas Siswa</label>
    <input type="text" class="form-control" id="kelas" name="kelas" value="<%= dataSama.kelas %>" required>
  </div> </div> <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
</div>
</div>
